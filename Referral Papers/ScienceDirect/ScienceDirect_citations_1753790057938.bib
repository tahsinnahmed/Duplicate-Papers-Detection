@article{NAGARAJ2018321,
title = {Detection of phishing websites using a novel twofold ensemble model},
journal = {Journal of Systems and Information Technology},
volume = {20},
number = {3},
pages = {321-357},
year = {2018},
issn = {1328-7265},
doi = {https://doi.org/10.1108/JSIT-09-2017-0074},
